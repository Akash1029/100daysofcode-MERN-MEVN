if page_count > 1
    nav.text-center.pt-4(aria-label='Page navigation example')
        ul.inline-flex.-space-x-px.text-base.h-10
            li
                if page_detail.hasPrevPage
                    a.flex.items-center.justify-center.px-4.h-10.ml-0.leading-tight.text-gray-500.bg-white.border.border-gray-300.rounded-l-lg( class='hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white' href=`?page=${page_detail.prevPage}`) Prev
                else 
                    a.flex.items-center.justify-center.px-4.h-10.ml-0.leading-tight.text-gray-500.bg-white.border.border-gray-300.rounded-l-lg( class='hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white' style="pointer-events: none" disabled href="#") Prev
            - var n = 1
                while n < page_count+1
                    li
                        if n === page_detail.page
                            a.flex.items-center.justify-center.px-4.h-10.text-blue-600.border.border-gray-300.bg-blue-50(aria-current='page' class='hover:bg-blue-100 hover:text-blue-700 dark:border-gray-700 dark:bg-gray-700 dark:text-white' href="?page="+n)=n++
                        else 
                            a.flex.items-center.justify-center.px-4.h-10.leading-tight.text-gray-500.bg-white.border.border-gray-300( class='hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white' href="?page="+n)=n++

                li
                if page_detail.hasNextPage
                    a.flex.items-center.justify-center.px-4.h-10.leading-tight.text-gray-500.bg-white.border.border-gray-300.rounded-r-lg( class='hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white' href=`?page=${page_detail.nextPage}`) Next
                else 
                    a.flex.items-center.justify-center.px-4.h-10.leading-tight.text-gray-500.bg-white.border.border-gray-300.rounded-r-lg( class='hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white' style="pointer-events: none" href="#" disabled) Next
                