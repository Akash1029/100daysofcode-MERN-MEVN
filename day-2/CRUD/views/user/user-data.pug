table.min-w-full.border.text-center.text-sm.font-light(class='dark:border-neutral-500')
    thead.border-b.font-medium(class='dark:border-neutral-500')
        tr
        th.border-r.px-6.py-4(scope='col' class='dark:border-neutral-500')
            | #
        th.border-r.px-6.py-4(scope='col' class='dark:border-neutral-500')
            | Name
        th.border-r.px-6.py-4(scope='col' class='dark:border-neutral-500')
            | Age
        th.border-r.px-6.py-4(scope='col' class='dark:border-neutral-500') Nationality
        th.px-6.py-4(scope='col' class='dark:border-neutral-500') Action
    tbody
        each val, key in user
            tr.border-b(class='dark:border-neutral-500')
            td.whitespace-nowrap.border-r.px-6.py-4.font-medium(class='dark:border-neutral-500')
                | #{key + 1}
            td.whitespace-nowrap.border-r.px-6.py-4(class='dark:border-neutral-500')
                | #{val.name}
            td.whitespace-nowrap.border-r.px-6.py-4(class='dark:border-neutral-500')
                | #{val.age}
            td.whitespace-nowrap.border-r.px-6.py-4(class='dark:border-neutral-500')
                | #{val.nationality}
            td.whitespace-nowrap.border-r.px-6.py-4(class='dark:border-neutral-500')
                a.bg-blue-500.text-white.font-bold.py-2.px-4.rounded(href=`/user/edit/${val.id}`) Edit
                a.ml-2.bg-red-500.text-white.font-bold.py-2.px-4.rounded(href=`/user/delete/${val.id}`) Delete

        else 
            tr.border-b(class='dark:border-neutral-500')
            td.whitespace-nowrap.border-r.px-6.py-4.font-medium(class='dark:border-neutral-500')
                | No user found
    
